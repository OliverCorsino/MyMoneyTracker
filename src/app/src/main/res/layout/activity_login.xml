<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".login">

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logoGuideline"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="222dp"/>

    <ImageView
            android:layout_width="133dp"
            android:layout_height="129dp"
            app:srcCompat="@color/colorPrimary"
            android:id="@+id/imageView2"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/logoGuideline"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:layout_width="313dp"
            android:layout_height="36dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/usernameInput"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="@+id/logoGuideline"
            android:background="@drawable/username_input"
            android:hint="Username"
            android:textSize="24sp"
            android:textAlignment="textStart"
            android:singleLine="true"
            android:paddingLeft="10dp"/>

    <EditText
            android:layout_width="313dp"
            android:layout_height="36dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordInput"
            android:layout_marginTop="28dp"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/usernameInput"
            android:hint="Password"
            android:background="@drawable/password_input"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/inputsGuideline"
            app:layout_constraintVertical_bias="0.145"/>

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inputsGuideline"
            app:layout_constraintGuide_begin="379dp"
            android:orientation="horizontal"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/sign_up_button"
            android:id="@+id/signUpButton"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/inputsGuideline"
            app:layout_constraintVertical_bias="0.114" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonsGuideline" app:layout_constraintHorizontal_bias="0.836"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/log_in_button"
            android:id="@+id/imageView4"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/inputsGuideline" app:layout_constraintVertical_bias="0.114"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/buttonsGuideline" app:layout_constraintHorizontal_bias="0.145"/>
    <TextView
            android:text="My Money Tracker - All rigths reserved 2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.44" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="18sp"/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonsGuideline"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>
</android.support.constraint.ConstraintLayout>